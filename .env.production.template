# ===================================
# SGSS MEDICAL FUND - PRODUCTION .env TEMPLATE
# ===================================
# This is a ready-to-use production template
# Replace placeholder values with your actual credentials

# ===================================
# CRITICAL PRODUCTION SETTINGS
# ===================================

DEBUG=False
SECRET_KEY=REPLACE_WITH_GENERATED_SECRET_KEY_50_PLUS_CHARACTERS
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# ===================================
# DATABASE (PostgreSQL Required)
# ===================================

DATABASE_URL=postgres://sgss_user:REPLACE_WITH_STRONG_PASSWORD@localhost:5432/sgss_production

# ===================================
# SECURITY (HTTPS Required)
# ===================================

CSRF_COOKIE_SECURE=True
SESSION_COOKIE_SECURE=True
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ===================================
# TIMEZONE & FRONTEND
# ===================================

TIME_ZONE=Africa/Nairobi
FRONTEND_URL=https://yourdomain.com

# ===================================
# EMAIL (Choose ONE option below)
# ===================================

# Option 1: SendGrid (Recommended - Free 100 emails/day)
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=REPLACE_WITH_SENDGRID_API_KEY
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Option 2: AWS SES (Uncomment if using)
# EMAIL_HOST=email-smtp.us-east-1.amazonaws.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=REPLACE_WITH_AWS_SES_USERNAME
# EMAIL_HOST_PASSWORD=REPLACE_WITH_AWS_SES_PASSWORD
# DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# ===================================
# OPTIONAL: ERROR TRACKING
# ===================================

# Sentry (Recommended - Free 5,000 events/month)
SENTRY_DSN=REPLACE_WITH_SENTRY_DSN_OR_LEAVE_EMPTY

# ===================================
# OPTIONAL: AWS S3 STORAGE
# ===================================

# For media files (claim attachments)
AWS_ACCESS_KEY_ID=REPLACE_WITH_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=REPLACE_WITH_AWS_SECRET_KEY
AWS_STORAGE_BUCKET_NAME=sgss-medical-fund-prod
AWS_S3_REGION_NAME=us-east-1

# ===================================
# OPTIONAL: CELERY (Background Jobs)
# ===================================

# Requires Redis server
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ===================================
# OPTIONAL: M-PESA (Kenya Payments)
# ===================================

MPESA_ENVIRONMENT=production
MPESA_CONSUMER_KEY=REPLACE_WITH_MPESA_KEY
MPESA_CONSUMER_SECRET=REPLACE_WITH_MPESA_SECRET
MPESA_SHORTCODE=REPLACE_WITH_SHORTCODE
MPESA_PASSKEY=REPLACE_WITH_PASSKEY
MPESA_INITIATOR_NAME=REPLACE_WITH_INITIATOR
MPESA_SECURITY_CREDENTIAL=REPLACE_WITH_CREDENTIAL

# ===================================
# DEPLOYMENT STEPS
# ===================================

# 1. Generate SECRET_KEY:
#    python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"

# 2. Create PostgreSQL database:
#    sudo -u postgres psql
#    CREATE DATABASE sgss_production;
#    CREATE USER sgss_user WITH PASSWORD 'your_password';
#    GRANT ALL PRIVILEGES ON DATABASE sgss_production TO sgss_user;

# 3. Update all REPLACE_WITH_* values above

# 4. Run migrations:
#    python manage.py migrate

# 5. Collect static files:
#    python manage.py collectstatic --noinput

# 6. Create superuser:
#    python manage.py createsuperuser

# 7. Test configuration:
#    python manage.py check --deploy

